	"description": "Linchpin Coding Standards",
	"type": "phpcodesniffer-standard",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=8.0",
		"wp-coding-standards/wpcs": "^3.3.0",
		"automattic/vipwpcs": "^3.0.1",
		"fig-r/psr2r-sniffer": "^0.6.4",
